{
  "plugins": ["react", "react-hooks", "jsx-a11y"],

  "extends": ["plugin:prettier/recommended"],
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "expect": true
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
