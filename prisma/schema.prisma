datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
  profile Profile?
}

model Resident {
  email String @unique
  password String
}

model Faker {
  id Int @default(autoincrement()) @id
  email String 
  password String
}


model Profile {
  id Int @default(autoincrement()) @id
  bio String?
  userID Int @unique
  user User @relation(fields: [userID], references: [id])
}

model Post {
  id        Int     @default(autoincrement()) @id
  authorId  Int?
  content   String?
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}

model Package {
  id        Int     @default(autoincrement()) @id
  delivered Boolean @default(false)
  description String 
}
